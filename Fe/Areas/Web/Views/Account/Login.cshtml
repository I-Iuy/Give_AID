@model Fe.ViewModels.AccountLoginViewModel
@{
    Layout = "~/Areas/Web/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header">
                    <h3 class="text-center font-weight-light my-4">Login</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Login" method="post">
                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                            <label asp-for="Email">Email address</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                            <label asp-for="Password">Password</label>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" id="inputRememberPassword" type="checkbox" value="" />
                            <label class="form-check-label" for="inputRememberPassword">Remember Password</label>
                        </div>

                        <div class="d-flex align-items-center justify-content-between mt-4 mb-2">
                            <a class="small" asp-action="ForgotPassword">Forgot Password?</a>
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>

                        <div class="text-center mt-3 mb-3">
                            <span class="text-muted">or</span>
                        </div>

                        <!-- Google Sign-In Button -->
                        <div id="g_id_onload"
                             data-client_id="1075692664543-0catpusg18j1htbf40jjnh9rln9co4lo.apps.googleusercontent.com"
                             data-callback="handleCredentialResponse"
                             data-auto_prompt="false">
                        </div>

                        <div class="g_id_signin"
                             data-type="standard"
                             data-size="large"
                             data-theme="outline"
                             data-text="continue_with"
                             data-shape="rectangular"
                             data-logo_alignment="left">
                        </div>

                        @if (TempData["Message"] != null)
                        {
                            var alertType = TempData["MessageType"]?.ToString() ?? "info";
                                <div class="alert alert-@alertType mt-3 text-center">
                                @TempData["Message"]
                                </div>
                        }
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small">
                        <a asp-action="Register">Need an account? Sign up!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
        <script src="https://accounts.google.com/gsi/client" async defer></script>
        <script>
            async function handleCredentialResponse(response) {
                const idToken = response.credential;

                const res = await fetch('/Web/Account/GoogleCallback', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ idToken })
                });

                if (res.ok) {
                    window.location.href = '/';
                } else {
                    alert("Google login failed");
                }
            }
        </script>
}
