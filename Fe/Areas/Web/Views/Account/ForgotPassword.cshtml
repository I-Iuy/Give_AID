@model Fe.ViewModels.ForgotPasswordViewModel
@{
    Layout = "~/Areas/Web/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Forgot Password";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Forgot Password</h3></div>
                <div class="card-body">
                    <div class="small mb-3 text-muted">Enter your email address and we will send you a link to reset your password.</div>
                    <form asp-action="ForgotPassword" method="post">
                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                            <label asp-for="Email">Email address</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                            <button type="submit" class="btn btn-primary">Reset Password</button>
                        </div>
                    </form>

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success mt-3">@TempData["Success"]</div>
                    }

                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div class="alert alert-danger mt-2">@error.ErrorMessage</div>
                    }
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small"><a asp-area="Web" asp-controller="Account" asp-action="Register">Need an account? Sign up!</a></div>
                </div>
            </div>
        </div>
    </div>
</div>
