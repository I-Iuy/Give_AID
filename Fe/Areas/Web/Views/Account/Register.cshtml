@model Fe.ViewModels.AccountRegisterViewModel
@{
    Layout = "~/Areas/Web/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header">
                    <h3 class="text-center font-weight-light my-4">Create Account</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Register" method="post" id="registerForm">
                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" />
                            <label asp-for="Email"></label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="FullName" class="form-control" />
                            <label asp-for="FullName"></label>
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="DisplayName" class="form-control" />
                            <label asp-for="DisplayName"></label>
                            <span asp-validation-for="DisplayName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="input-group">
                                <select id="countryCode" class="form-select" style="max-width: 120px;">
                                    <option value="+84" selected>🇻🇳 +84</option>
                                    <option value="+1">🇺🇸 +1</option>
                                    <option value="+61">🇦🇺 +61</option>
                                    <option value="+81">🇯🇵 +81</option>
                                </select>
                                <input id="phoneInput" class="form-control" placeholder="Enter phone number" />
                            </div>
                            <input type="hidden" asp-for="Phone" id="Phone" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Address" class="form-control" />
                            <label asp-for="Address"></label>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Password" type="password" class="form-control" />
                            <label asp-for="Password"></label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Register</button>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small">
                        <a asp-action="Login">Have an account? Go to login</a>
                    </div>
                </div>

                @if (TempData["Message"] != null)
                {
                    var alertType = TempData["MessageType"]?.ToString() ?? "info";
                    <div class="alert alert-@alertType mt-3 text-center white-space-pre-line">
                        @TempData["Message"]
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.getElementById("registerForm").addEventListener("submit", function () {
            const code = document.getElementById("countryCode").value;
            const number = document.getElementById("phoneInput").value.trim();
            document.getElementById("Phone").value = code + number;
        });
    </script>
}