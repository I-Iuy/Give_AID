@model Fe.DTOs.Donations.CreateDonationDto
@{
    Layout = null;
}
<!-- Modal container -->
<div class="modal-header bg-primary text-white">
    <h5 class="modal-title" id="donationFilterModalLabel">Choose Your Donation Preferences</h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
</div>
<div class="modal-body">
    <form asp-action="Add" asp-controller="Donation" asp-area="Web" method="post">
        <div class="row g-3">
            <input type="hidden" name="CampaignId" value="@ViewBag.CampaignId" />
            <input type="hidden" name="Method" value="@(ViewBag.CampaignId == null ? "Purpose" : "Campaign")" />

            <!-- Full Name -->
            <div class="col-md-6">
                <label for="fullName" class="form-label">Full Name</label>
                <input type="text" class="form-control" id="fullName" name="FullName" placeholder="Enter your name" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="col-md-6">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="Email" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Address -->
            <div class="col-md-6">
                <label for="address" class="form-label">Address</label>
                <input type="text" class="form-control" id="address" name="Address" placeholder="Enter your address" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <!-- Donation Amount -->
            <div class="col-12">
                <label for="amountInput" class="form-label">Donation Amount ($)</label>
                <input type="number" class="form-control" id="amountInput" name="Amount" placeholder="Enter amount" min="1" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>

             <!-- Purpose -->
            <div class="col-12">
                <label class="form-label">Purpose</label>
                <select asp-for="PurposeId"
                        asp-items="@(ViewBag.Purposes as List<SelectListItem>)"
                        class="form-select"
                        id="purposeSelect">
                    <option disabled selected value="">-- Choose Purpose --</option>
                </select>

                @* Nếu dropdown bị disabled, thêm hidden để đảm bảo form submit được *@
                @if (ViewBag.CampaignId != null)
                {
                    <input type="hidden" name="PurposeId" value="@Model.PurposeId" />
                }

                <p id="donationPurposeMessage" class="text-danger fw-semibold mt-2"></p>
            </div>

            <!-- Anonymous Checkbox  -->
            <div class="col-12">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="anonymousCheck" name="Anonymous" />
                    <label class="form-check-label" for="anonymousCheck">
                        Post anonymously
                    </label>
                </div>
            </div>

            <!-- Submit Button -->
            <div class="col-12 mt-3">
                <button type="submit" class="btn btn-danger w-100">
                    Donate
                </button>
            </div>
        </div>
    </form>
</div>
