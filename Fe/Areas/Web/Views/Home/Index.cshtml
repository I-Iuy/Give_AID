@model List<Fe.Areas.Web.Controllers.HomeController.FeatureCard>
@using System.Text.RegularExpressions

@{
    ViewData["Title"] = "Home";
    Layout = "~/Areas/Web/Views/Shared/_Layout.cshtml";
}

<div class="container px-4 px-lg-5">
    @{
        var top3Posts = Model.Take(3).ToList();
    }
    <div class="row gx-4 gx-lg-5 align-items-center my-5">
        <div class="col-lg-7">
            <div id="mainCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    @for (int i = 0; i < top3Posts.Count; i++)
                    {
                        var post = top3Posts[i];
                        <div class="carousel-item @(i == 0 ? "active" : "")">
                            <a asp-area="Web"
                               asp-controller="Home"
                               asp-action="Post"
                               asp-route-id="@post.CampaignId"
                               asp-route-returnToAll="true">
                                <img src="@post.ImageUrl" class="d-block w-100 rounded" alt="@post.Title" style="height: 400px; object-fit: cover;" />
                            </a>
                        </div>
                    }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#mainCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#mainCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </button>
            </div>
        </div>
        <div class="col-lg-5 d-flex align-items-center" style="min-height: 400px;">
            <div class="w-100 px-3 px-lg-4 py-4">
                <h1 class="fw-bold text-primary fs-2 mb-3" style="line-height: 1.3;">
                    @ViewData["IntroTitle"]
                </h1>
                <p class="text-secondary mb-3 fs-6" style="line-height: 1.6;">
                    Chúng tôi kết nối bạn với các chiến dịch từ thiện uy tín và minh bạch.
                    Chọn nơi bạn muốn giúp — và tạo nên sự khác biệt.
                </p>
                <ul class="list-unstyled text-secondary mb-4 fs-6" style="line-height: 1.5;">
                    <li><i class="bi bi-check-circle-fill text-success me-2"></i>Ủng hộ chiến dịch bạn quan tâm</li>
                    <li><i class="bi bi-check-circle-fill text-success me-2"></i>Minh bạch, rõ ràng và cập nhật liên tục</li>
                    <li><i class="bi bi-check-circle-fill text-success me-2"></i>Lan tỏa điều tốt đẹp cùng cộng đồng</li>
                </ul>
                <div class="d-flex flex-wrap gap-2">
                    <a class="btn btn-primary px-4 py-2" data-bs-toggle="modal" data-bs-target="#donationFilterModal">
                        @ViewData["IntroButtonText"]
                    </a>
                    <a class="btn btn-outline-primary px-4 py-2" href="/Web/Home/AllCampaigns">
                        Khám phá chiến dịch
                    </a>
                </div>
            </div>
        </div>

    </div>

    <div class="card border-0 my-5 py-5 text-center shadow-sm" style="background-color: rgb(215, 231, 257);">
        <div class="card-body px-3 px-md-5">
            <h2 class="fw-bold text-primary mb-3">Cùng nhau tạo nên sự thay đổi tích cực</h2>
            <p class="text-secondary mb-4 fs-5">
                Mỗi hành động của bạn, dù nhỏ bé, đều có thể mang lại hi vọng và cơ hội cho những mảnh đời khó khăn.
            </p>
            <a href="/Web/Home/AllCampaigns" class="btn btn-outline-primary btn-lg px-4 py-2">
                Khám phá các chiến dịch
            </a>
        </div>
    </div>

    <!-- Campaigns Section -->
    <div id="campaignContainer">
        <div class="row gx-4 gx-lg-5">
            @foreach (var item in Model)
            {
                var plainText = Regex.Replace(item.Description ?? "", "<.*?>", "");
                var shortText = plainText.Length > 150 ? plainText.Substring(0, 150) + "..." : plainText;

                <div class="col-md-4 mb-5" data-aos="fade-up" data-aos-duration="800">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-primary fw-bold">@item.Title</h5>
                            <div class="position-relative mb-3">
                                <img src="@item.ImageUrl"
                                     alt="@item.Title"
                                     class="img-fluid rounded"
                                     style="height: 200px; width: 100%; object-fit: cover;" />
                                <span class="badge bg-danger position-absolute top-0 start-0 m-2">
                                    @item.Cause
                                </span>
                            </div>
                            <p class="card-text text-secondary mb-4 text-truncate-2" style="min-height: 3.2em;">@shortText</p>
                            <div class="mt-auto d-flex justify-content-between">
                                <a class="btn btn-outline-primary btn-sm"
                                   asp-area="Web" asp-controller="Home" asp-action="Post"
                                   asp-route-id="@item.CampaignId" asp-route-returnToAll="true">
                                    Find Out More
                                </a>
                                <a class="btn btn-danger btn-sm"
                                   data-bs-toggle="modal"
                                   data-bs-target="#donationFilterModal"
                                   data-program-title="@item.Title"
                                   data-selected-cause="@item.Cause">
                                    <i class="bi bi-heart-fill"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        @{
            int currentPage = (int)ViewBag.CurrentPage;
            int totalPages = (int)ViewBag.TotalPages;
            int maxVisiblePages = 5;
            int startPage = Math.Max(1, currentPage - 2);
            int endPage = Math.Min(totalPages, startPage + maxVisiblePages - 1);
        }
        <nav>
            <ul class="pagination justify-content-center">
                @if (currentPage > 1)
                {
                    <li class="page-item">
                        <a href="#" class="page-link ajax-page" data-page="@(currentPage - 1)">«</a>
                    </li>
                }
                @for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(currentPage == i ? "active" : "")">
                        <a href="#" class="page-link ajax-page" data-page="@i">@i</a>
                    </li>
                }
                @if (currentPage < totalPages)
                {
                    <li class="page-item">
                        <a href="#" class="page-link ajax-page" data-page="@(currentPage + 1)">»</a>
                    </li>
                }
            </ul>
        </nav>
    </div>

    <!-- Stats Section -->
    <div class="card border-0 my-5 py-5 shadow-sm" style="background-color: rgb(215, 231, 257);">
        <div class="container text-center">
            <h2 class="fw-bold mb-5 text-primary" data-aos="fade-up">The Numbers That Matter</h2>
            <div class="row justify-content-center">
                <div class="col-6 col-md-3 mb-4" data-aos="zoom-in" data-aos-delay="100">
                    <div class="fs-6 text-secondary">Programs</div>
                    <div class="fs-2 fw-bold text-dark">113</div>
                </div>
                <div class="col-6 col-md-3 mb-4" data-aos="zoom-in" data-aos-delay="200">
                    <div class="fs-6 text-secondary">Partners & NGOs</div>
                    <div class="fs-2 fw-bold text-dark">35</div>
                </div>
                <div class="col-6 col-md-3 mb-4" data-aos="zoom-in" data-aos-delay="300">
                    <div class="fs-6 text-secondary">Members</div>
                    <div class="fs-2 fw-bold text-dark">29,632</div>
                </div>
                <div class="col-6 col-md-3 mb-4" data-aos="zoom-in" data-aos-delay="400">
                    <div class="fs-6 text-secondary">Total Raised ($)</div>
                    <div class="fs-2 fw-bold text-dark">$2.7M</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Section: Emotional Transition -->
    <div class="py-5 text-center bg-white section-story" data-aos="fade-up" data-aos-duration="1000">
        <div class="container px-4 px-lg-5">
            <h3 class="fw-bold text-primary mb-4" data-aos="fade-up" data-aos-delay="100">Behind Every Number Is a Real Story</h3>
            <p class="lead text-secondary mx-auto" style="max-width: 760px; line-height: 1.7;" data-aos="fade-up" data-aos-delay="200">
                Each number reflects more than statistics — it holds a life, a voice, and a dream. <br />
                A new school in a remote area. Clean water reaching its first household. A safe shelter for the vulnerable. <br /><br />
                These stories become possible because of you. Your action brings these numbers to life and turns hope into reality.
            </p>

            <div class="mt-4 d-flex justify-content-center flex-column flex-md-row gap-3" data-aos="fade-up" data-aos-delay="300">
                <a href="/Web/Home/AllCampaigns" class="btn btn-outline-primary btn-lg px-4 py-2">
                    Explore Campaigns
                </a>
                <a href="/Web/Home/WhatWeDo" class="btn btn-outline-primary btn-lg px-4 py-2">
                    Learn What We Do
                </a>
            </div>
        </div>
    </div>

    <!-- Section: Be the Other 50% -->
    <div class="container my-5 py-5 text-center" style="background-color: rgb(215, 231, 257); border-radius: 1rem;" data-aos="zoom-in-up" data-aos-duration="1200">
        <h2 class="fw-bold text-primary mb-4" data-aos="fade-up" data-aos-delay="100">Be the Other 50%</h2>
        <p class="lead text-secondary mb-4" data-aos="fade-up" data-aos-delay="200">
            We've completed half the journey.<br />
            But the other 50% depends on you.<br />
            Join us to complete the circle of hope.
        </p>

        <!-- Progress Bar -->
        <div class="progress mx-auto mb-4" style="height: 30px; max-width: 600px; background-color: rgb(61, 206, 76);" data-aos="zoom-in" data-aos-delay="300">
            <div class="progress-bar fw-bold" role="progressbar" style="width: 50%; background-color: forestgreen">
                50% Complete
            </div>
        </div>

        <a href="/Web/Home/AllCampaigns" class="btn btn-primary btn-lg mt-2" data-aos="fade-up" data-aos-delay="400">
            Become the Other 50%
        </a>
    </div>



    <!-- Custom CSS -->
    <style>
        .text-truncate-2 {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .section-story {
            background-color: #ffffff;
            border-top: 1px solid #dee2e6;
            border-bottom: 1px solid #dee2e6;
        }

            .section-story h3 {
                font-size: 2rem;
            }

            .section-story p {
                font-size: 1.125rem;
            }

    </style>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
    <script>
        AOS.init({
            once: true,
            duration: 800,
        });
    </script>

    <script>
        document.addEventListener("click", function (e) {
            if (e.target.classList.contains("ajax-page")) {
                e.preventDefault();
                const page = e.target.dataset.page;

                fetch(`/Web/Home/CampaignListPartial?page=${page}`)
                    .then(res => res.text())
                    .then(html => {
                        document.getElementById("campaignContainer").innerHTML = html;
                        AOS.init(); // Re-init AOS if needed
                    });
            }
        });
    </script>
