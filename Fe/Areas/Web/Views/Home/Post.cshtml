@model Fe.Areas.Web.Controllers.HomeController.FeatureCard

@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Areas/Web/Views/Shared/_Layout.cshtml";
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

}

@using Fe.DTOs.Comment
@{
    var comments = ViewBag.Comments as List<CommentDto>;
}

<!-- Page content-->
<div class="container mt-5">
    <div class="row">
        <div class="col-lg-8">
            <!-- Post content-->
            <article>
                <!-- Post header-->
                <header class="mb-4">
                    <h1 class="fw-bolder mb-1">@Model.Title</h1>

                    <!-- ✅ Share button here -->
                    <div class="d-flex align-items-center gap-2 mt-2">
                        <button class="btn btn-sm btn-outline-secondary"
                                data-bs-toggle="modal"
                                data-bs-target="#shareModal"
                                data-campaign-id="@Model.Id"
                                data-campaign-title="@Model.Title">
                            <i class="bi bi-share-fill me-1"></i> Share This Campaign
                        </button>
                    </div>

                    <ol class="breadcrumb mb-4 mt-3">
                        <li class="breadcrumb-item">
                            <a asp-area="Web" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (ViewBag.ReturnToAll == true)
                        {
                            <li class="breadcrumb-item">
                                <a asp-area="Web" asp-controller="Home" asp-action="AllCampaigns">All Campaigns</a>
                            </li>
                        }
                        <li class="breadcrumb-item active">@Model.Title</li>
                    </ol>
                    <div class="text-muted fst-italic mb-2">Posted on January 1, 2023 by NGO Platform</div>
                    <a class="badge bg-danger text-decoration-none link-light" href="#">@Model.Cause</a>
                </header>

                <figure class="mb-4">
                    <img class="img-fluid rounded" src="https://dummyimage.com/900x400/ced4da/6c757d.jpg" alt="Post Banner" />
                </figure>

                <section class="mb-5">
                    <p class="fs-5 mb-4">@Model.Description</p>
                    <p class="fs-5 mb-4">The universe is large and old, and the ingredients for life as we know it are everywhere...</p>
                    <p class="fs-5 mb-4">If you get asteroids about a kilometer in size...</p>

                    <h2 class="fw-bolder mb-4 mt-5">We Believe in Change</h2>
                    <p class="fs-5 mb-4">Sharing knowledge, providing aid, and building sustainable systems...</p>
                    <p class="fs-5 mb-4">Every contribution matters — whether it’s time, money, or effort...</p>
                </section>
            </article>

            <!-- Post partners & NGOs-->
            @if ((Model.Partners?.Any() ?? false) || (Model.NGOs?.Any() ?? false))
            {
                <section class="mb-5">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title mb-4">Program Collaborators</h5>
                            <div class="row">
                                @if (Model.Partners?.Any() ?? false)
                                {
                                    <div class="col-md-6 mb-4">
                                        <h6 class="fw-bold mb-3">Partners</h6>
                                        <ul class="list-group list-group-flush">
                                            @foreach (var partner in Model.Partners)
                                            {
                                                <li class="list-group-item d-flex align-items-center">
                                                    <img src="@partner.LogoUrl" alt="@partner.Name" class="rounded-circle me-3" width="32" height="32" />
                                                    <span>@partner.Name</span>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                }
                                @if (Model.NGOs?.Any() ?? false)
                                {
                                    <div class="col-md-6 mb-4">
                                        <h6 class="fw-bold mb-3">NGOs</h6>
                                        <ul class="list-group list-group-flush">
                                            @foreach (var ngo in Model.NGOs)
                                            {
                                                <li class="list-group-item d-flex align-items-center">
                                                    <img src="@ngo.LogoUrl" alt="@ngo.Name" class="rounded-circle me-3" width="32" height="32" />
                                                    <span>@ngo.Name</span>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </section>
            }

            <!-- COMMENT SECTION START -->
            <section class="mb-5">
                <div class="card bg-light">
                    <div class="card-body">
                        <!-- Comment form -->
                        <form class="mb-4" asp-area="Web" asp-controller="Comment" asp-action="Create" method="post">
                            <input type="hidden" name="CampaignId" value="@Model.Id" />
                            <textarea class="form-control mb-2" name="Content" rows="3" placeholder="Write your comment here..." required></textarea>

                            <div class="form-check mb-2">
                                <input class="form-check-input" type="checkbox" name="IsAnonymous" id="anonymousCheck" />
                                <label class="form-check-label" for="anonymousCheck">Post anonymously</label>
                            </div>

                            @if (!User.Identity.IsAuthenticated)
                            {
                                <div class="mb-2">
                                    <input name="GuestName" class="form-control" placeholder="Your name (optional if not anonymous)">
                                </div>
                            }

                            <button type="submit" class="btn btn-primary">Submit Comment</button>
                        </form>

                        <!-- Comment list -->
                        @if (comments != null && comments.Any())
                        {
                            foreach (var comment in comments)
                            {
                                <div class="d-flex mb-4">
                                    <div class="ms-3">
                                        <div class="fw-bold">
                                            @(comment.IsAnonymous ? "Anonymous" : (comment.GuestName ?? "Guest"))
                                            <span class="text-muted small">– @comment.CommentedAt.ToString("dd/MM/yyyy HH:mm")</span>
                                        </div>
                                        <p>@comment.Content</p>

                                        @if (comment.IsReplied)
                                        {
                                            <div class="mt-2 ms-4 p-2 border rounded bg-light">
                                                <div class="fw-bold text-primary">Admin Reply:</div>
                                                <div class="fst-italic text-muted">This comment has been responded to by the administrator.</div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-muted">There are no comments for this campaign yet.</p>
                        }
                    </div>
                </div>
            </section>
            <!-- COMMENT SECTION END -->
        </div>

        <!-- Side widgets-->
        <div class="col-lg-4">
            <div class="sticky-top" style="top: 80px;">
                @Html.Partial("_SupportPurpose")
                @Html.Partial("_UrgentProgramsWidget")

                <!-- Interest Subscription Widget -->
                <!-- Interest Subscription Widget -->
                <div class="card mb-4">
                    <div class="card-header">Stay Informed</div>
                    <div class="card-body">
                        <p class="mb-3">Would you like to receive updates about future programs?</p>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <form asp-area="Web" asp-controller="Notification" asp-action="Subscribe" method="post">
                                <button type="submit" class="btn btn-outline-primary w-100">
                                    <i class="bi bi-bell-fill"></i> Get Notifications
                                </button>
                            </form>
                        }
                        else
                        {
                            <a class="btn btn-outline-secondary w-100" href="/Account/Login">
                                <i class="bi bi-box-arrow-in-right me-1"></i> Login to Subscribe
                            </a>
                        }
                    </div>
                </div>


                <!-- Donate Widget -->
                <div class="card mb-4">
                    <div class="card-header">Make a Difference</div>
                    <div class="card-body">
                        <p class="mb-2">Would you like to donate to the <strong>@ViewBag.Title</strong> program?</p>
                        <a class="btn btn-outline-danger w-100"
                           data-bs-toggle="modal"
                           data-bs-target="#donationFilterModal"
                           data-selected-cause="@Model.Cause"
                           data-program-title="@Model.Title">
                            <i class="bi bi-heart-fill me-1"></i> Donate Now
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Share Modal -->
<div class="modal fade" id="shareModal" tabindex="-1" aria-labelledby="shareModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-area="Web" asp-controller="Share" asp-action="Create">
                <div class="modal-header">
                    <h5 class="modal-title" id="shareModalLabel">Share Campaign</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" name="CampaignId" id="modalCampaignId" />

                    <div class="mb-3">
                        <label class="form-label">Receiver Email</label>
                        <input type="email" name="ReceiverEmail" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Your Name (optional)</label>
                        <input type="text" name="GuestName" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Platform</label>
                        <select name="Platform" class="form-select">
                            <option>Email</option>
                            <option>Facebook</option>
                            <option>WhatsApp</option>
                        </select>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Share Now</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const shareModal = document.getElementById('shareModal');
        shareModal.addEventListener('show.bs.modal', event => {
            const button = event.relatedTarget;
            const campaignId = button.getAttribute('data-campaign-id');
            document.getElementById('modalCampaignId').value = campaignId;
        });
    </script>
}
