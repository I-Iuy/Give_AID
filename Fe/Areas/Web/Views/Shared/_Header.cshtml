<!-- Responsive navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container px-5">
        <a class="navbar-brand" asp-area="Web" asp-controller="Home" asp-action="Index">LOGO</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                <li class="nav-item"><a class="nav-link" asp-area="Web" asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="nav-item"><a class="nav-link" asp-area="Web" asp-controller="Home" asp-action="AllCampaigns">All Campaigns</a></li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="aboutDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        About
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="aboutDropdown">
                        <li><a class="dropdown-item" asp-area="Web" asp-controller="Home" asp-action="WhatWeDo">What We Do</a></li>
                        <li><a class="dropdown-item" asp-area="Web" asp-controller="Home" asp-action="WhatWeDo">Our Mission</a></li>
                        <li><a class="dropdown-item" asp-area="Web" asp-controller="Home" asp-action="WhatWeDo">Our Team</a></li>
                        <li><a class="dropdown-item" asp-area="Web" asp-controller="Home" asp-action="WhatWeDo">Achievements</a></li>
                        <li><a class="dropdown-item" asp-area="Web" asp-controller="Home" asp-action="WhatWeDo">Supporters</a></li>
                        <li><a class="dropdown-item" asp-area="Web" asp-controller="Home" asp-action="WhatWeDo">Careers</a></li>
                    </ul>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-area="Web" asp-controller="Home" asp-action="DonationHistory">
                        <i class="bi bi-cash-coin"></i>
                    </a>
                </li>

                @* LOGIN/USER LOGIC *@
                @{
                    var name = Context.Session.GetString("DisplayName");
                    var role = Context.Session.GetString("Role");
                    var isLogin = !string.IsNullOrEmpty(name);
                    var isAdmin = role == "Admin";
                }

                @if (isLogin)
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle"></i> @name
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            @if (isAdmin)
                            {
                                <li><a class="dropdown-item" href="https://localhost:7108/admin">Admin Dashboard</a></li>
                                <li><hr class="dropdown-divider" /></li>
                            }
                            <li><a class="dropdown-item" asp-area="Web" asp-controller="Account" asp-action="Logout">Sign out</a></li>
                        </ul>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a asp-area="Web" asp-controller="Account" asp-action="Login" class="nav-link" title="Login">
                            <i class="bi bi-person"></i>
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>
