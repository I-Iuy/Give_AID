@{
    // Get current action and slug from route for active link highlighting
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString()?.ToLower();
    var currentSlug = ViewContext.RouteData.Values["slug"]?.ToString()?.ToLower();
}

<!-- Top Navigation Bar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top shadow-sm py-3">
    <div class="container px-4">

        <!-- Logo and Brand Name -->
        <a class="navbar-brand fw-bold fs-4 gradient-text d-flex align-items-center gap-2"
           asp-area="Web" asp-controller="Home" asp-action="Index">
            <img src="~/images/logo.png" alt="Logo" style="height: 44px;" />
            <span class="gradient-text">Give-AID</span>
        </a>

        <!-- Mobile Menu Toggle -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navbar Content -->
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <!-- Left Navigation Links -->
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <!-- Home -->
                <li class="nav-item">
                    <a class="nav-link text-light fs-6 @(currentAction == "index" ? "active fw-bold" : "opacity-75")"
                       asp-area="Web" asp-controller="Home" asp-action="Index">Home</a>
                </li>

                <!-- All Campaigns -->
                <li class="nav-item">
                    <a class="nav-link text-light fs-6 @(currentAction == "allcampaigns" ? "active fw-bold" : "opacity-75")"
                       asp-area="Web" asp-controller="Home" asp-action="AllCampaigns">All Campaigns</a>
                </li>

                <!-- Dropdown: About -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-light fs-6 @(currentAction == "about" ? "active fw-bold" : "opacity-75")"
                       id="aboutDropdown" role="button" data-bs-toggle="dropdown">
                        About
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="aboutDropdown">
                        <!-- Each dropdown item links to a slug-specific About section -->
                        <li><a class="dropdown-item @(currentSlug == "what-we-do" ? "active fw-bold" : "")" asp-route-slug="what-we-do" asp-area="Web" asp-controller="Home" asp-action="About">What We Do</a></li>
                        <li><a class="dropdown-item @(currentSlug == "our-mission" ? "active fw-bold" : "")" asp-route-slug="our-mission" asp-area="Web" asp-controller="Home" asp-action="About">Our Mission</a></li>
                        <li><a class="dropdown-item @(currentSlug == "our-team" ? "active fw-bold" : "")" asp-route-slug="our-team" asp-area="Web" asp-controller="Home" asp-action="About">Our Team</a></li>
                        <li><a class="dropdown-item @(currentSlug == "career-with-us" ? "active fw-bold" : "")" asp-route-slug="career-with-us" asp-area="Web" asp-controller="Home" asp-action="About">Career With Us</a></li>
                        <li><a class="dropdown-item @(currentSlug == "our-achievements" ? "active fw-bold" : "")" asp-route-slug="our-achievements" asp-area="Web" asp-controller="Home" asp-action="About">Our Achievements</a></li>
                        <li><a class="dropdown-item @(currentSlug == "our-supporters" ? "active fw-bold" : "")" asp-route-slug="our-supporters" asp-area="Web" asp-controller="Home" asp-action="About">Our Supporters</a></li>
                        <li><a class="dropdown-item @(currentSlug == "read-about-us" ? "active fw-bold" : "")" asp-route-slug="read-about-us" asp-area="Web" asp-controller="Home" asp-action="About">Read About Us</a></li>
                    </ul>
                </li>
            </ul>

            <!-- Right Actions: Donation & User -->
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-center">
                <!-- Donation History -->
                <li class="nav-item">
                    <a class="nav-link fs-6 text-light opacity-75"
                       asp-area="Web" asp-controller="Home" asp-action="DonationHistory"
                       title="Donation History" data-bs-toggle="tooltip">
                        <i class="bi bi-cash-coin fs-5"></i>
                    </a>
                </li>

                <!-- Donate Now -->
                <li class="nav-item">
                    <a class="btn btn-outline-warning fw-bold ms-2 px-3 py-1"
                       asp-area="Web" asp-controller="Home" asp-action="AllCampaigns">
                        <i class="bi bi-heart-fill me-1"></i> Donate Now
                    </a>
                </li>

                <!-- User Dropdown (Authenticated) -->
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item dropdown ms-2">
                        <a class="nav-link dropdown-toggle text-light fs-6"
                           id="userDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle me-1"></i>@User.Identity.Name
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" asp-area="Web" asp-controller="Account" asp-action="Profile">Profile</a></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li>
                                <form asp-area="Web" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="dropdown-item">Logout</button>
                                </form>
                            </li>
                        </ul>
                    </li>
                }
                else
                {
                    <!-- Login Link (Anonymous User) -->
                    <li class="nav-item ms-2">
                        <a class="nav-link text-light fs-6 opacity-75"
                           asp-area="Web" asp-controller="Account" asp-action="Login"
                           title="Login" data-bs-toggle="tooltip">
                            <i class="bi bi-box-arrow-in-right me-1"></i> Login
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>

<!-- Initialize tooltips for navbar -->
<script>
    document.querySelectorAll('[data-bs-toggle="tooltip"]').forEach(el => new bootstrap.Tooltip(el));
</script>

<!-- Gradient Text Style -->
<style>
    .gradient-text {
        background: linear-gradient(to bottom, #00FFFF, #00FFFF, #00FFFF, #00FFFF, #00FFAA, #00FF5E, #A6FF00, #FFD700);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-fill-color: transparent;
    }
</style>