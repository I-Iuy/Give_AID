<body>
    @Html.Partial("_Header")

    <div class="pt-5">
        @RenderBody()
    </div>

    @Html.Partial("_Footer")

    <!-- Tạm thời ẩn phần filter để tránh lỗi -->
    @* @Html.Partial("FilterPartial", new Fe.Areas.Web.Controllers.HomeController.DonationFilterModel()) *@
