@model dynamic

<div class="modal fade" id="programFilterModal" tabindex="-1" aria-labelledby="programFilterModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="programFilterModalLabel">Select Partners and NGOs</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <!-- Partners Accordion -->
                    <div class="mb-4">
                        <label class="form-label">Partners</label>
                        <div class="accordion" id="partnersAccordion">
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingPartnersAC">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapsePartnersAC" aria-expanded="false" aria-controls="collapsePartnersAC">
                                        Partners A–C
                                    </button>
                                </h2>
                                <div id="collapsePartnersAC" class="accordion-collapse collapse" aria-labelledby="headingPartnersAC" data-bs-parent="#partnersAccordion">
                                    <div class="accordion-body">
                                        <!-- Search -->
                                        <input type="text" class="form-control mb-2" id="partnerSearch" placeholder="Search partners...">
                                        <!-- Checkbox list -->
                                        <div id="partnerList">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" name="Partners" value="PartnerA" id="partnerA">
                                                <label class="form-check-label" for="partnerA">Partner A</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" name="Partners" value="PartnerB" id="partnerB">
                                                <label class="form-check-label" for="partnerB">Partner B</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" name="Partners" value="PartnerC" id="partnerC">
                                                <label class="form-check-label" for="partnerC">Partner C</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Add more groups if needed -->
                        </div>
                    </div>

                    <!-- NGOs Accordion -->
                    <div class="mb-4">
                        <label class="form-label">NGOs</label>
                        <div class="accordion" id="ngosAccordion">
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingNgosAC">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseNgosAC" aria-expanded="false" aria-controls="collapseNgosAC">
                                        NGOs A–C
                                    </button>
                                </h2>
                                <div id="collapseNgosAC" class="accordion-collapse collapse" aria-labelledby="headingNgosAC" data-bs-parent="#ngosAccordion">
                                    <div class="accordion-body">
                                        <!-- Search -->
                                        <input type="text" class="form-control mb-2" id="ngoSearch" placeholder="Search NGOs...">
                                        <!-- Checkbox list -->
                                        <div id="ngoList">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" name="NGOs" value="NgoA" id="ngoA">
                                                <label class="form-check-label" for="ngoA">NGO A</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" name="NGOs" value="NgoB" id="ngoB">
                                                <label class="form-check-label" for="ngoB">NGO B</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" name="NGOs" value="NgoC" id="ngoC">
                                                <label class="form-check-label" for="ngoC">NGO C</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Add more groups if needed -->
                        </div>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-success">Apply</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Partner search
        document.getElementById('partnerSearch').addEventListener('input', function () {
            const keyword = this.value.toLowerCase();
            document.querySelectorAll('#partnerList .form-check').forEach(item => {
                const label = item.textContent.toLowerCase();
                item.style.display = label.includes(keyword) ? 'block' : 'none';
            });
        });

        // NGO search
        document.getElementById('ngoSearch').addEventListener('input', function () {
            const keyword = this.value.toLowerCase();
            document.querySelectorAll('#ngoList .form-check').forEach(item => {
                const label = item.textContent.toLowerCase();
                item.style.display = label.includes(keyword) ? 'block' : 'none';
            });
        });
    </script>
}
