@model Fe.Dtos.Ngos.UpdateNgoDto

@{
    ViewData["Title"] = "Edit NGO";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Edit NGO</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="List">NGOs</a></li>
        <li class="breadcrumb-item active">Edit</li>
    </ol>

    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="NgoId" />
                <input type="hidden" asp-for="LogoUrl" />
                <div class="mb-3">
                    <label class="form-label">Ngo ID</label>
                    <p class="form-control-plaintext">@Model.NgoId</p>
                </div>
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Current Logo</label><br />
                    <img src="@Model.LogoUrl" alt="Logo" style="height: 50px;" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Change Logo</label>
                    <input name="logo" type="file" class="form-control" accept=".png,.svg" />
                    <span asp-validation-for="LogoUrl" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="WebsiteUrl" class="form-label"></label>
                    <input asp-for="WebsiteUrl" class="form-control" />
                    <span asp-validation-for="WebsiteUrl" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Save
                </button>
                <button type="reset" class="btn btn-secondary">Cancel</button>
            </form>
        </div>
    </div>
</div>