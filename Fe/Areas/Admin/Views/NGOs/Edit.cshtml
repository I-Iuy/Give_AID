@model Fe.Areas.Admin.Controllers.NGOsController.NGOModel
@{
    ViewData["Title"] = "Edit NGO";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Edit NGO</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="List">NGOs</a></li>
        <li class="breadcrumb-item active">Edit</li>
    </ol>

    <div class="card mb-4">
        <div class="card-body">
            <form>
                <div class="mb-3">
                    <label class="form-label">NGO Name</label>
                    <input type="text" class="form-control" value="@Model.Name" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Logo Upload</label>
                    <input type="file" class="form-control" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Website URL</label>
                    <input type="url" class="form-control" value="@Model.WebsiteUrl" />
                </div>
                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Save</button>
                <button type="reset" class="btn btn-secondary">Cancel</button>
            </form>
        </div>
    </div>
</div>
