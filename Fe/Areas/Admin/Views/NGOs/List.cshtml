@model List<Fe.Dtos.Ngos.NgoDto>
@{
    ViewData["Title"] = "NGOs";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">NGOs</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item active">NGOs</li>
    </ol>

    <div class="mb-3">
        <a asp-action="Add" class="btn btn-success"><i class="fas fa-plus"></i> Add NGO</a>
    </div>

    <div class="card mb-4">
        <div class="card-header"><i class="fas fa-table"></i> NGO List</div>
        <div class="card-body">
            <table id="datatablesSimple" class="table table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Logo</th>
                        <th>Website</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ngo in Model)
                    {
                        <tr>
                            <td>@ngo.Name</td>
                            <td><img src="@ngo.LogoUrl" alt="Logo" style="height: 40px;" /></td>
                            <td><a href="@ngo.WebsiteUrl" class="btn btn-info btn-sm text-white" target="_blank" ><i class="fas fa-link"></i> Visit</a></td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@ngo.NgoId" class="btn btn-sm btn-warning text-white">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@ngo.NgoId" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this ngo?');">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
