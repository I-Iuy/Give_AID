@{
    ViewData["Title"] = "Dashboard"; // Sets page title
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml"; // Uses shared Admin layout
}

<!-- Main container for admin dashboard content -->
<div class="container-fluid px-4">

    <!-- Page heading -->
    <h1 class="mt-4">Dashboard</h1>

    <!-- Breadcrumb navigation -->
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Dashboard Overview</li>
    </ol>

    <!-- Summary Cards: Display key metrics -->
    <div class="row">

        <!-- Total Donations Card -->
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">Total Donations</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <span class="fw-bold">$123,456</span>
                    <i class="fas fa-hand-holding-heart"></i>
                </div>
            </div>
        </div>

        <!-- Ongoing Campaigns Card -->
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white mb-4">
                <div class="card-body">Ongoing Campaigns</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <span class="fw-bold">12</span>
                    <i class="fas fa-bullhorn"></i>
                </div>
            </div>
        </div>

        <!-- Supporters Card -->
        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-white mb-4">
                <div class="card-body">Supporters</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <span class="fw-bold">875</span>
                    <i class="fas fa-users"></i>
                </div>
            </div>
        </div>

        <!-- Urgent Programs Card -->
        <div class="col-xl-3 col-md-6">
            <div class="card bg-danger text-white mb-4">
                <div class="card-body">Urgent Programs</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <span class="fw-bold">3</span>
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Section -->
    <div class="row">

        <!-- Donation Line Chart -->
        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-line me-1"></i>
                    Donation Growth Over Time
                </div>
                <div class="card-body">
                    <canvas id="donationChart" width="100%" height="40"></canvas>
                </div>
            </div>
        </div>

        <!-- Programs Bar Chart -->
        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-bar me-1"></i>
                    Programs by Category
                </div>
                <div class="card-body">
                    <canvas id="programChart" width="100%" height="40"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Campaigns Table -->
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Top 5 Active Campaigns
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Target</th>
                        <th>Raised</th>
                        <th>End Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Sample static data rows -->
                    <tr>
                        <td>Support Flood Victims</td>
                        <td>$10,000</td>
                        <td>$7,500</td>
                        <td>30/06/2025</td>
                        <td><span class="badge bg-warning">In Progress</span></td>
                    </tr>
                    <tr>
                        <td>Clean Water for Rural Areas</td>
                        <td>$12,000</td>
                        <td>$4,100</td>
                        <td>22/08/2025</td>
                        <td><span class="badge bg-warning">In Progress</span></td>
                    </tr>
                    <tr>
                        <td>Scholarships for Students</td>
                        <td>$20,000</td>
                        <td>$13,450</td>
                        <td>10/09/2025</td>
                        <td><span class="badge bg-success">Good</span></td>
                    </tr>
                    <tr>
                        <td>Emergency Medical Aid</td>
                        <td>$8,000</td>
                        <td>$8,000</td>
                        <td>01/06/2025</td>
                        <td><span class="badge bg-success">Completed</span></td>
                    </tr>
                    <tr>
                        <td>School Supplies for Children</td>
                        <td>$5,000</td>
                        <td>$3,200</td>
                        <td>15/07/2025</td>
                        <td><span class="badge bg-info">In Progress</span></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Scripts Section -->
@section Scripts {
    <!-- Load Chart.js from CDN -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        // Line Chart: Donation Growth Over Time
        const donationCtx = document.getElementById('donationChart');
        new Chart(donationCtx, {
            type: 'line',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May'],
                datasets: [{
                    label: 'Donations ($)',
                    data: [3000, 4500, 6000, 7500, 12000],
                    fill: true,
                    backgroundColor: 'rgba(78, 115, 223, 0.1)',
                    borderColor: 'rgba(78, 115, 223, 1)',
                    tension: 0.4
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Bar Chart: Programs by Category
        const programCtx = document.getElementById('programChart');
        new Chart(programCtx, {
            type: 'bar',
            data: {
                labels: ['Health', 'Education', 'Emergency', 'Environment'],
                datasets: [{
                    label: 'Programs',
                    data: [5, 8, 3, 4],
                    backgroundColor: ['#4e73df', '#1cc88a', '#f6c23e', '#36b9cc']
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true,
                        stepSize: 1
                    }
                }
            }
        });
    </script>
}
