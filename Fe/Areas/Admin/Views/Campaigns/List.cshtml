@model List<Fe.DTOs.Campaigns.CampaignDto>

@{
    ViewData["Title"] = "Campaigns List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Campaigns</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item">
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Campaigns</li>
    </ol>

    <div class="mb-3">
        <a asp-area="Admin" asp-controller="Campaigns" asp-action="Add" class="btn btn-success">
            <i class="fas fa-plus"></i> Add Campaign
        </a>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Campaign List
        </div>
        <div class="card-body">
            <table id="datatablesSimple" class="table table-bordered">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Purpose</th>
                        <th>Event Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.PurposeTitle</td>
                            <td>@item.EventDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                <a asp-area="Admin" asp-controller="Campaigns" asp-action="Edit" asp-route-id="@item.CampaignId"
                                   class="btn btn-sm btn-warning text-white">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a href="#" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
