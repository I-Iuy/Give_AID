@using Newtonsoft.Json
@model Fe.DTOs.Partners.UpdatePartnerDto
@{
    ViewData["Title"] = "Edit Partner";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Edit Partner</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="List">Partners</a></li>
        <li class="breadcrumb-item active">Edit</li>
    </ol>

    <div class="card mb-4">
        <div class="card-body">
            <form id="editPartnerForm" asp-action="Edit" method="post" enctype="multipart/form-data">
                <input asp-for="PartnerId" type="hidden" />
                <input asp-for="LogoUrl" type="hidden" />
                <input asp-for="ContractFile" type="hidden" />
                <div class="mb-3">
                    <label class="form-label">Partner ID</label>
                    <p class="form-control-plaintext">@Model.PartnerId</p>
                </div>
                <div class="mb-3">
                    <label class="form-label">Partner Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Current Logo</label><br />
                    <img src="@Model.LogoUrl" alt="Logo" style="height: 50px;" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Change Logo</label>
                    <input name="logo" type="file" class="form-control" accept=".png,.svg" />
                    <span asp-validation-for="LogoUrl" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Current Contract</label><br />

                    <a href="@Model.ContractFile" class="btn btn-info btn-sm text-white" target="_blank"><i class="fas fa-eye"></i> View</a>
                </div>
                <div class="mb-3">
                    <label class="form-label">Change Contract</label>
                    <input name="contract" type="file" class="form-control" accept=".pdf,.docx" />
                    <span asp-validation-for="ContractFile" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Save</button>
                <a asp-action="List" class="btn btn-secondary">Cancel</a>

            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const form = document.getElementById("editPartnerForm");

            form.addEventListener("submit", async function (event) {
                event.preventDefault();

                const partnerId = @Model.PartnerId;
                const originalName = @Html.Raw(JsonConvert.SerializeObject(Model.Name));
                const newName = document.querySelector('input[name="Name"]').value.trim();

                if (newName !== originalName) {
                    try {
                        const response = await fetch(`/Admin/Partners/CheckInUse/${partnerId}`, {
                            method: 'GET',
                            headers: { 'Accept': 'application/json' }
                        });

                        if (!response.ok) {
                            const errorText = await response.text();
                            throw new Error(errorText || 'Failed to check partner usage.');
                        }

                        const data = await response.json();

                        if (data.isUsed) {
                            const confirmed = confirm("Partner is in use. Editing the name may affect related programs!");
                            if (!confirmed) return;
                        }

                        form.submit();
                    } catch (error) {
                        alert("An error occurred: " + error.message);
                    }
                } else {
                    form.submit();
                }
            });
        });
    </script>
}
