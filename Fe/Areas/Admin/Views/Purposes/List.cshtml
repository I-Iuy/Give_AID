@using Newtonsoft.Json
@model List<Fe.DTOs.Purposes.PurposeDto>

@{
    ViewData["Title"] = "Purposes List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Purposes</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item">
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Purposes</li>
    </ol>

    <div class="mb-3">
        <a asp-area="Admin" asp-controller="Purposes" asp-action="Add" class="btn btn-success">
            <i class="fas fa-plus"></i> Add Purpose
        </a>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Purpose List
        </div>
        <div class="card-body">
            <table id="datatablesSimple" class="table table-bordered">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var purpose in Model)
                    {
                        <tr>
                            <td>@purpose.Title</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@purpose.PurposeId" class="btn btn-sm btn-warning text-white">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="Delete"
                                   asp-route-id="@purpose.PurposeId"
                                   class="btn btn-sm btn-danger"
                                   onclick="return handleDelete(this);">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        const warning = @Html.Raw(JsonConvert.SerializeObject(TempData["Warning"]));
        if (warning && warning.length > 0) {
            confirm(warning); 
        }

        function handleDelete(link) {
            return confirm("Are you sure you want to delete this purpose?");
        }
    </script>
}