@model Fe.Areas.Admin.Controllers.UsersController.UserDetail

@{
    ViewData["Title"] = "User Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">User Details</h1>
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <i class="fas fa-user"></i> Account Info
        </div>
        <div class="card-body">
            <p><strong>Full Name:</strong> @Model.FullName</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Display Name:</strong> @Model.DisplayName</p>
            <p><strong>Phone:</strong> @Model.Phone</p>
            <p><strong>Address:</strong> @Model.Address</p>
            <p><strong>Role:</strong> @Model.Role</p>
            <p>
                <strong>Status:</strong>
                @if (Model.IsActive)
                {
                    <span class="badge bg-success">Active</span>
                }
                else
                {
                    <span class="badge bg-danger">Blocked</span>
                }
            </p>
        </div>
    </div>
    <a asp-action="List" class="btn btn-secondary">Back to List</a>
</div>
