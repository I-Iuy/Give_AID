@model List<Fe.Areas.Admin.Controllers.UsersController.User>

@{
    ViewData["Title"] = "User List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    string currentSort = Context.Request.Query["sortBy"];
    bool currentDesc = Context.Request.Query["desc"] == "true";
}

@if (TempData["Message"] != null)
{
    var alertType = TempData["MessageType"]?.ToString() ?? "info";
    <div class="alert alert-@alertType text-center fw-semibold">
        @TempData["Message"]
    </div>
}

<div class="container-fluid px-4">
    <h1 class="mt-4">User List</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item">
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Users</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            List of Registered Users
        </div>
        <div class="card-body">
            <table id="datatablesSimple" class="table table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>
                            <a asp-action="List"
                               asp-route-sortBy="FullName"
                               asp-route-desc="@(currentSort == "FullName" && !currentDesc)">
                                Full Name @(currentSort == "FullName" ? (currentDesc ? "🔽" : "🔼") : "")
                            </a>
                        </th>
                        <th>
                            <a asp-action="List"
                               asp-route-sortBy="Email"
                               asp-route-desc="@(currentSort == "Email" && !currentDesc)">
                                Email @(currentSort == "Email" ? (currentDesc ? "🔽" : "🔼") : "")
                            </a>
                        </th>
                        <th>
                            <a asp-action="List"
                               asp-route-sortBy="DisplayName"
                               asp-route-desc="@(currentSort == "DisplayName" && !currentDesc)">
                                Display Name @(currentSort == "DisplayName" ? (currentDesc ? "🔽" : "🔼") : "")
                            </a>
                        </th>
                        <th>
                            <a asp-action="List"
                               asp-route-sortBy="Role"
                               asp-route-desc="@(currentSort == "Role" && !currentDesc)">
                                Role @(currentSort == "Role" ? (currentDesc ? "🔽" : "🔼") : "")
                            </a>
                        </th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.FullName</td>
                            <td>@user.Email</td>
                            <td>@user.DisplayName</td>
                            <td>@user.Role</td>
                            <td>
                                <span class="badge @(user.IsActive ? "bg-success" : "bg-secondary")">
                                    @(user.IsActive ? "Active" : "Blocked")
                                </span>
                            </td>
                            <td class="d-flex">
                                <a class="btn btn-info btn-sm text-white me-1"
                                   asp-area="Admin"
                                   asp-controller="Users"
                                   asp-action="Details"
                                   asp-route-id="@user.AccountId">
                                    <i class="fas fa-eye"></i> Details
                                </a>

                                <form asp-area="Admin" asp-controller="Users" asp-action="ToggleStatus" method="post" onsubmit="return confirm('Are you sure?')">
                                    <input type="hidden" name="id" value="@user.AccountId" />
                                    <input type="hidden" name="isActive" value="@(user.IsActive ? "false" : "true")" />
                                    <button type="submit" class="btn btn-sm @(user.IsActive ? "btn-danger" : "btn-success") text-white">
                                        <i class="fas @(user.IsActive ? "fa-ban" : "fa-check")"></i>
                                        @(user.IsActive ? "Block" : "Unblock")
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
