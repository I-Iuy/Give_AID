@model List<Fe.Areas.Admin.Controllers.ImagesController.ImageModel>
@{
    ViewData["Title"] = "Photo Gallery";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    .image-card img {
        transition: transform 0.3s ease;
    }

    .image-card:hover img {
        transform: scale(1.05);
    }
</style>

<div class="container-fluid px-4">
    <h1 class="mt-4">Photo Gallery</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item">
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Images</li>
    </ol>

    <div class="row">
        @foreach (var img in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card image-card shadow-sm">
                    <img src="@img.Url" class="card-img-top" alt="@img.Title">
                    <div class="card-body">
                        <h5 class="card-title">@img.Title</h5>
                        <a href="@img.Url" target="_blank" class="btn btn-info btn-sm text-white">
                            <i class="fas fa-eye"></i> View 
                        </a>

                    </div>
                </div>
            </div>
        }
    </div>
</div>
