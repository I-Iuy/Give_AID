@model IEnumerable<Fe.DTOs.Comment.CommentDashboardDto>

@{
    ViewData["Title"] = "Question List";
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";

}

<h2 class="mt-3">Question List</h2>

<table class="table table-striped table-bordered mt-3">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Sender</th>
            <th>Content</th>
            <th>Campaign</th>
            <th>Submitted At</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.CommentId</td>
                    <td>@item.GuestName</td>
                    <td>@item.Content</td>
                    <td>#@item.CampaignId</td>
                    <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        @if (item.IsReplied)
                        {
                            <span class="badge bg-success">Replied</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Not Replied</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Reply" asp-route-id="@item.CommentId" class="btn btn-sm btn-primary">Reply</a>
                        <form asp-action="Delete" asp-route-id="@item.CommentId" method="post" class="d-inline"
                              onsubmit="return confirm('Are you sure you want to delete this question?');">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">No questions available.</td>
            </tr>
        }
    </tbody>
</table>
